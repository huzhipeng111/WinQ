<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tabtips"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingTop="15px"
        android:background="@drawable/tablayout_background"
        android:textSize="@dimen/sp9"
        android:paddingLeft="15px"
        android:gravity="left"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/VPN_Server_Location"
        android:textColor="@color/c">
    </TextView>
    <TextView
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingRight="20px"
        android:background="@drawable/tablayout_background"
        android:gravity="left"
        android:drawableRight="@mipmap/icon_expand"
        android:drawablePadding="@dimen/x10"
        android:fontFamily="@font/roboto_regular"
        android:paddingLeft="15px"
        android:textSize="@dimen/sp15"
        android:text="@string/choose_a_country"
        android:textColor="@color/white"></TextView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0px"
        android:layout_marginLeft="0px"
        android:layout_marginRight="0px"
        android:layout_marginBottom="0px"
        app:cardBackgroundColor="@color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerSelView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0px"
        android:layout_marginLeft="@dimen/x28"
        android:layout_marginRight="@dimen/x28"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_43"
            android:layout_weight="1"
            android:background="@drawable/cancal_button_bg"
            android:fontFamily="@font/vagroun_q"
            android:letterSpacing="0.1"
            android:text="@string/back"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bt_continue"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_43"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_weight="1"
            android:background="@drawable/comfirm_button_bg"
            android:fontFamily="@font/vagroun_q"
            android:letterSpacing="0.1"
            android:text="@string/continue2"
            android:textColor="@color/mainColor" />
    </LinearLayout>
</LinearLayout>