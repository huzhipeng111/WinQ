<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/x5"
            app:cardMaxElevation="@dimen/x10"
            android:layout_marginLeft="@dimen/x36"
            android:layout_marginRight="@dimen/x36"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/x40"
                    android:layout_marginRight="@dimen/x40"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/x40"
                            android:src="@mipmap/icon_neo"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="@string/Amount_of_NEO"
                            android:fontFamily="@font/roboto_regular_q"
                            android:textSize="8sp"
                            android:textColor="#a8a6ae"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/et_neo_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="17sp"
                                    android:maxLength="5"
                                    android:singleLine="true"
                                    android:inputType="number"
                                    android:maxWidth="100dp"
                                    android:minWidth="80dp"
                                    android:textColor="#333"
                                    android:fontFamily="@font/roboto_regular_q"
                                    android:text=""
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:id="@+id/tv_max_neo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/MAX"
                                    android:fontFamily="@font/roboto_regular_q"
                                    android:textSize="8sp"
                                    android:textColor="#a8a6ae"
                                    android:layout_marginRight="@dimen/x40"
                                    android:drawableLeft="@mipmap/bg_icon_rise"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/x40"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/x40"
                            android:src="@mipmap/icon_qlink"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="@string/Amount_of_QLC"
                            android:fontFamily="@font/roboto_regular_q"
                            android:textSize="8sp"
                            android:textColor="#a8a6ae"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/et_qlc_count"
                                    android:inputType="none"
                                    android:editable="false"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="17sp"
                                    android:maxWidth="150dp"
                                    android:maxLength="10"
                                    android:singleLine="true"
                                    android:minWidth="80dp"
                                    android:textColor="#333"
                                    android:fontFamily="@font/roboto_regular_q"
                                    android:text=""
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1"/>
                                <!--<TextView-->
                                    <!--android:id="@+id/tv_max_qlc"-->
                                    <!--android:layout_width="wrap_content"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:text="MAX"-->
                                    <!--android:fontFamily="@froboto_regular_qular"-->
                                    <!--android:textSize="8sp"-->
                                    <!--android:textColor="#a8a6ae"-->
                                    <!--android:layout_marginRight="@dimen/x40"-->
                                    <!--android:drawableLeft="@mipmap/bg_icon_rise"/>-->
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/x40"
                    android:layout_marginRight="@dimen/x40"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/x40"
                    android:layout_marginBottom="@dimen/x40"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular_q"
                        android:textSize="8sp"
                        android:textColor="#a8a6ae"
                        android:text="@string/Current_exchange_rate"
                        />
                    <TextView
                        android:id="@+id/tv_rate"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/roboto_regular_q"
                        android:textSize="8sp"
                        android:textColor="#a8a6ae"
                        android:layout_height="wrap_content"
                        android:text=""
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/x36"
            android:layout_marginRight="@dimen/x36"
            android:gravity="center_vertical"
            android:layout_height="74dp">
            <Button
                android:id="@+id/bt_back"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:text="@string/back"
                android:fontFamily="@font/vagroun_q"
                android:background="@drawable/cancal_button_bg"
                android:textColor="@color/white"
                android:layout_height="@dimen/dp_43" />
            <Button
                android:id="@+id/bt_buy"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:text="@string/buy_now"
                android:layout_marginLeft="@dimen/dp_10"
                android:fontFamily="@font/vagroun_q"
                android:background="@drawable/comfirm_button_bg"
                android:textColor="@color/main_color"
                android:layout_height="@dimen/dp_43" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>