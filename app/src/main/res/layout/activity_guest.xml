<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.nightonke.wowoviewpager.WoWoViewPager
        android:id="@+id/wowo_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <!--<View-->
        <!--android:id="@+id/circle"-->
        <!--android:layout_width="250dp"-->
        <!--android:layout_height="250dp"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:background="@drawable/background_gray_blue_circle"-->
        <!--/>-->
    <ImageView
        android:id="@+id/iv_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_wallet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x184"
        android:scaleType="fitEnd"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/tv_page0"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_below="@+id/iv_0"
        android:layout_marginTop="@dimen/x190"
        android:text="@string/guest_viewpager_1"
        android:fontFamily="@font/vagroundedbt"
        android:textColor="@color/main_color"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_vpn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x184"
        android:scaleType="fitEnd"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/tv_page1"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_below="@+id/iv_1"
        android:layout_marginTop="@dimen/x140"
        android:text="@string/guest_viewpager_2"
        android:fontFamily="@font/vagroundedbt"
        android:textColor="@color/main_color"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_share_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x184"
        android:scaleType="fitEnd"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/tv_page2"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_below="@+id/iv_2"
        android:layout_marginTop="@dimen/x190"
        android:text="@string/guest_viewpager_3"
        android:fontFamily="@font/vagroundedbt"
        android:textColor="@color/main_color"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_page0_test_net"
        android:layout_width="wrap_content"
        android:text="@string/testnet_reward"
        android:fontFamily="@font/vagroundedbt"
        android:textColor="@color/color_333"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/x20"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rl_dot"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/x1040"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x220"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/dot0"
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_progress_not_show"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/dot1"
            android:layout_toRightOf="@+id/dot0"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_progress_not_show"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/dot2"
            android:layout_toRightOf="@+id/dot1"
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_progress_not_show"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/dot"
            android:layout_toRightOf="@+id/dot0"
            android:layout_marginLeft="@dimen/x20"
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_progress_show"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/got_it"
        android:layout_width="@dimen/x340"
        android:layout_below="@+id/tv_page2"
        android:background="@drawable/main_color_bt_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x140"
        android:fontFamily="@font/vagroundedbt"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/got_it"
        android:layout_height="@dimen/x80" />


</RelativeLayout>