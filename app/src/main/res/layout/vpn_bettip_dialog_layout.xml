<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:text="@string/THIS_VPN_NAME_HAS_ALREADY_BEEN_REGISTERED"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingTop="@dimen/x45"
        android:paddingBottom="@dimen/x45"
        android:fontFamily="@font/vagroun_q"
        />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginLeft="@dimen/x77"
        android:layout_marginRight="@dimen/x77"
        android:textColor="@color/color_333"
        android:fontFamily="@font/roboto_regular_q"
        android:layout_marginTop="@dimen/x40"
        android:layout_marginBottom="@dimen/x40"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingTop="@dimen/x10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:paddingBottom="@dimen/x40"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cancal_button_bg"
            android:textColor="@color/white"
            android:text="@string/cancel" />

        <View
            android:layout_width="10dp"
            android:layout_height="40dp"/>

        <Button
            android:id="@+id/btn_right"
            android:layout_width="match_parent"
            android:textColor="@color/mainColor"
            android:fontFamily="@font/vagroun_q"
            android:layout_height="match_parent"
            android:background="@drawable/comfirm_button_bg"
            android:layout_weight="1"
            android:text="@string/I_will_pay" />
    </LinearLayout>
</LinearLayout>