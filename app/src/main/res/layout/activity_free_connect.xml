<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/x14"
        app:cardCornerRadius="@dimen/x5"
        app:cardElevation="@dimen/x10"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_count"
                android:textColor="@color/main_color"
                android:textSize="48sp"
                android:fontFamily="@font/vagroundedbt"
                android:layout_marginTop="@dimen/x45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/main_color"
                android:textSize="15sp"
                android:fontFamily="@font/vagroundedbt"
                android:layout_marginTop="@dimen/x15"
                android:layout_marginBottom="@dimen/x20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AVAILABLE"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginBottom="@dimen/x10"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="11sp"
            android:gravity="center_vertical"
            android:textColor="#808080"
            android:text="@string/HISTORY_RECORD"
            android:layout_marginLeft="@dimen/x64"
            android:layout_height="@dimen/x50" />
        <TextView
            android:id="@+id/tv_expansion"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x50"
            android:gravity="center_vertical"
            android:textSize="11sp"
            android:textColor="@color/main_color"
            android:fontFamily="@font/vagroundedbt"
            android:text="@string/all"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x20"
            android:drawableRight="@mipmap/icon_expansion"
            android:drawablePadding="@dimen/x10"
            />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/x14"
        app:cardCornerRadius="@dimen/x5"
        app:cardElevation="@dimen/x10"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>
</LinearLayout>