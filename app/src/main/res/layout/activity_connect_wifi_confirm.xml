<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/navigation_shape"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x70"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_user_avater"
            android:layout_width="@dimen/x90"
            android:layout_marginLeft="@dimen/x42"
            android:src="@mipmap/icon_default"
            android:layout_height="@dimen/x90" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connect"
            android:letterSpacing="0.1"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/white"
            android:fontFamily="@font/vagroun_q"
            />
        <ImageView
            android:id="@+id/iv_avater"
            android:layout_width="@dimen/x90"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x42"
            android:layout_marginLeft="@dimen/x42"
            android:src="@mipmap/icon_default"
            android:layout_height="@dimen/x90" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x24"
        android:src="@mipmap/tab_checked"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_height="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x78"
        android:layout_marginTop="@dimen/x70"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/x78"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/SSID_WIFI_NAME"
            android:textSize="13sp"
            android:textColor="@color/color_40ffffff" />
        <TextView
            android:id="@+id/tv_ssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_regular_q"
            android:text="@string/ssid"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/MAC_Address"
                    android:textSize="13sp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="@color/color_40ffffff" />
                <TextView
                    android:id="@+id/tv_mac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_regular_q"
                    android:text="@string/ssid"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/IPV4_Address"
                    android:textSize="13sp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="@color/color_40ffffff" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_regular_q"
                    android:text="192.168.1.34"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x46"
        android:src="@mipmap/tab_checked"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_height="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x35"
        android:layout_marginLeft="@dimen/x78"
        android:layout_marginRight="@dimen/x78"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/Signal_Strength"
                android:textSize="13sp"
                android:textColor="@color/color_40ffffff" />
            <TextView
                android:id="@+id/tv_signal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular_q"
                android:text="3/5"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/Devices_Connected"
                android:textSize="13sp"
                android:textColor="@color/color_40ffffff" />
            <TextView
                android:id="@+id/tv_connect_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular_q"
                android:text="1/10"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x46"
        android:src="@mipmap/tab_checked"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_height="@dimen/dp_10" />

    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/DO_YOU_WANT_TO_CONNECT_TO_THIS_WIFI"
        android:layout_marginTop="@dimen/x90"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/vagroun_q"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/x90"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_height="80dp">
        <Button
            android:id="@+id/bt_cancal"
            android:layout_width="0dp"
            android:text="@string/cancel"
            android:textSize="12sp"
            android:background="@drawable/cancal_button_bg"
            android:textColor="@color/white"
            android:layout_weight="2"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/bt_connect"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="12sp"
            android:layout_weight="2"
            android:background="@drawable/comfirm_button_bg"
            android:text="@string/yes_connect"
            android:textColor="@color/mainColor"
            android:layout_height="50dp" />
    </LinearLayout>

</LinearLayout>